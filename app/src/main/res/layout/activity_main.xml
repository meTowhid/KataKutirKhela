<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:rotation="-8"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/colorPrimary"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/playGrid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:rotation="-8"
        app:layout_constraintBottom_toTopOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:rotation="-8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <LinearLayout
        android:id="@+id/playGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:rotation="-10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="0" />

            <Button
                android:id="@+id/btn_12"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="1" />

            <Button
                android:id="@+id/btn_13"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_21"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="3" />

            <Button
                android:id="@+id/btn_22"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="4" />

            <Button
                android:id="@+id/btn_23"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_31"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="6" />

            <Button
                android:id="@+id/btn_32"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="7" />

            <Button
                android:id="@+id/btn_33"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#fff"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="8" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:rotation="-10"
        app:layout_constraintBottom_toBottomOf="@id/playGrid"
        app:layout_constraintEnd_toEndOf="@id/playGrid"
        app:layout_constraintStart_toStartOf="@id/playGrid"
        app:layout_constraintTop_toTopOf="@id/playGrid">

        <View
            android:id="@+id/line_0"
            android:layout_width="220dp"
            android:layout_height="3dp"
            android:background="@color/colorPrimary"
            android:visibility="invisible" />

        <View
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:id="@+id/line_1"
            android:layout_width="220dp"
            android:layout_height="3dp"
            android:background="@color/colorPrimary"
            android:visibility="invisible" />

        <View
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:id="@+id/line_2"
            android:layout_width="220dp"
            android:layout_height="3dp"
            android:background="@color/colorPrimary"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:rotation="-100"
        app:layout_constraintBottom_toBottomOf="@id/playGrid"
        app:layout_constraintEnd_toEndOf="@id/playGrid"
        app:layout_constraintStart_toStartOf="@id/playGrid"
        app:layout_constraintTop_toTopOf="@id/playGrid">

        <View
            android:id="@+id/line_3"
            android:layout_width="220dp"
            android:layout_height="3dp"
            android:background="@color/colorPrimary"
            android:visibility="invisible" />

        <View
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:id="@+id/line_4"
            android:layout_width="220dp"
            android:layout_height="3dp"
            android:background="@color/colorPrimary"
            android:visibility="invisible" />

        <View
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:id="@+id/line_5"
            android:layout_width="220dp"
            android:layout_height="3dp"
            android:background="@color/colorPrimary"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:id="@+id/line_6"
        android:layout_width="280dp"
        android:layout_height="3dp"
        android:background="@color/colorPrimary"
        android:rotation="35"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/playGrid"
        app:layout_constraintEnd_toEndOf="@id/playGrid"
        app:layout_constraintStart_toStartOf="@id/playGrid"
        app:layout_constraintTop_toTopOf="@id/playGrid" />

    <View
        android:id="@+id/line_7"
        android:layout_width="280dp"
        android:layout_height="3dp"
        android:background="@color/colorPrimary"
        android:rotation="-55"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/playGrid"
        app:layout_constraintEnd_toEndOf="@id/playGrid"
        app:layout_constraintStart_toStartOf="@id/playGrid"
        app:layout_constraintTop_toTopOf="@id/playGrid" />

    <TextView
        android:id="@+id/tv_msgBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/btn_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playGrid"
        tools:text="Message goes here" />

    <Button
        android:id="@+id/btn_start"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fontFamily="sans-serif"
        android:text="@string/lets_play"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/playGrid"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/playGrid"
        app:layout_constraintTop_toBottomOf="@id/playGrid" />

    <Button
        android:id="@+id/btn_play_with_opponent"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/colorPrimary"
        android:fontFamily="sans-serif"
        android:text="@string/you_and_me"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@id/playGrid"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/playGrid"
        app:layout_constraintTop_toBottomOf="@id/btn_start" />
</androidx.constraintlayout.widget.ConstraintLayout>